border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '
border-none()
  &:after
    display: none
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
no-wrap()
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -6px
    left: -6px
    right: -6px
    bottom: -6px
container($bgColor = #fff, $top = 0, $bottom = 0)
  position fixed
  top $top
  left 0
  bottom $bottom
  right 0
  background $bgColor
  font-size 0
scroll-wrapper($top = 50px, $bottom = 0)
  position fixed
  top $top
  bottom $bottom
  left 0
  right 0
  overflow hidden
no-result-wrapper()
  position: absolute
  width: 100%
  top: 50%
  transform: translateY(-100%)

@import "../../common/stylus/mixin.styl";

.me-seller-container
  container()
  background-color #ececec
  &.slide-enter-active, &.slide-leave-active
    transition 0.3s
  &.slide-enter, &.slide-leave-to
    transform translate3d(100%, 0, 0)
  .tab
    margin-top 45px
  .content-wrapper
    scroll-wrapper(90px, 0)
    .order
      padding 0 0.1rem
      margin-bottom 0.04rem
      background-color #fff
      .header
        width 100%
        height 0.4rem
        line-height 0.4rem
        display flex
        .description
          width 80%
          .el-icon-coral-people_fill
            vertical-align top
            color #dbdbdb
            &:before
              vertical-align top
          .name
            vertical-align top
            display inline-block
            max-width 30%
            no-wrap()
            color #8A8A8F
          .group-name
            margin-left 0.08rem
            display inline-block
            max-width 45%;
            no-wrap()
            color #666
          .el-icon-coral-enter
            margin-left 0.06rem
            vertical-align top
            color #b8b8b8
            &:before
              vertical-align top
        .status
          width 20%
          text-align right
          color #f66937
      .main
        height 0.54rem
        display flex
        background #f3f2f7
        img
          height 0.54rem
          width 0.54rem
        .info
          margin-left 0.1rem
          padding 0.05rem 0
          display flex
          flex-direction column
          justify-content space-between
          color #0e0d12
      .footer
        height 0.36rem
        line-height 0.36rem
        display flex
        justify-content space-between
        color #8a8a8f
  .no-result-wrapper
    no-result-wrapper()
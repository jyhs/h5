@import "../../common/stylus/mixin.styl";

.ency-detail-container
  container(#fff, 45px)
  z-index 200
  font-size 14px
  &.slide-enter-active, &.slide-leave-active
    transition all 0.3s linear
  &.slide-enter, &.slide-leave-to
    transform translate3d(100%, 0, 0)
  .vux-img
    background-size: contain !important;
  .content-wrapper
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    overflow hidden
  .ency-detail-wrapper
    padding: 0.1rem 0.1rem 0;
    .name
      margin-top 10px
      color: #000;
      height: 24px;
      line-height: 24px;
      .focused
        color: #f5a623;
    .tags
      margin-top 10px
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      .tag
        background-color: #e7e7e7;
        border-radius: 2px;
        padding: 2px 6px;
        margin-right: 0.1rem;
        span
          color: #9b9b9b;
    .more
      margin-top 10px
      height: 1.08rem;
      background-color: #eee;
      border-radius: 2px;
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      .item
        width: 100%;
        box-sizing: border-box;
        padding-left: 0.1rem;
        line-height: 0.27rem;
        color: #9b9b9b;
        .price
          color: #f5a623;
    .desc
      margin-top 10px
      color: #4a4a4a;
      line-height: 16px;
.group-list
  .block-content
    width: 100%;
    padding: 0.05rem 0.05rem 0 0.05rem;
    box-sizing: border-box;
    .content-main
      background: #fff;
      box-shadow: 0 2px 6px 0 rgba(0,0,0,0.10);
      border-radius: 4px;
      display: flex;
      flex-direction: row;
      align-items: center;
    .group-content-main
      height: 1.06rem;
      .avatar
        padding: 0 0.05rem;
        .avatar-wrapper
          width 100%
          height 100%
          position relative
          img
            width: 0.82rem;
            height: 0.86rem;
            vertical-align: middle;
            border-radius: 4px;
          .mask
            position absolute
            right 0
            bottom 0
            border 16px solid #ee735c
            border-top 16px solid transparent
            border-left 16px solid transparent
          .has-no-auth
            position absolute
            right 0
            bottom 8px
            font-size 8px
            color #fff
            transform-origin center center
            transform rotate(-45deg)
      .info
        flex: 1;
        height: 100%;
        box-sizing: border-box;
        padding: 0.1rem;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        .info-item
          display: flex;
          flex-direction: row;
          justify-content: space-between;
          align-items center
          .status
            display: inline-block;
            height: 0.18rem;
            line-height: 0.18rem;
            text-align: center;
            padding: 0.01rem 0.08rem;
            background-color: #ee735c;
            border-radius: 0.09rem;
            color: #fff;
            opacity: 0.9;
          .status-now
            background-color #0bb20c
          .status-disabled
            background-color: #bcbcbc;
          .el-icon-coral-naozhong
            color: #f5a623;
          .group-name
            color: #000;
            font-weight: 300;
            line-height: 0.2rem;

@import "../../common/stylus/mixin.styl";

.lost-board
  position fixed
  left 0
  bottom 0
  width 100%
  z-index 400
  &.fold-enter-active, &.fold-leave-active
    transition all 0.3s linear
  &.fold-enter, &.fold-leave-to
    transform translate3d(0, 100%, 0)
  .list-header
    height 40px
    line-height 40px
    padding 0 18px
    background #DCD036
    border-bottom 1px solid rgba(7, 17, 27, 0.1)
    .title
      float left
      font-size 16px
      color #fcfcfc
    .empty
      float right
      font-size 12px
      color rgb(0, 160, 220)
  .list-content
    padding 0 18px
    max-height 240px
    background #fff
    overflow hidden
    .detail-item
      position relative
      padding 12px 0
      box-sizing border-box
      height 60px
      display flex
      border-1px(rgba(7, 17, 27, 0.1))
      .name
        line-height 48px
        font-size 14px
        color rgb(7, 17, 27)
        .size
          color: #cbcbcb;
      .price
        position absolute
        right 90px
        bottom 12px
        line-height 24px
        font-size 14px
        font-weight 700
        color rgb(240, 20, 20)
      .cart-control-wrapper
        position absolute
        right 0
        bottom 6px
.list-mask
  position fixed
  top: 0
  left: 0
  width 100%
  height 100%
  z-index 300
  backdrop-filter blur(10px)
  background rgba(7, 17, 27, 0.6)
  &.fade-enter-active, &.fade-leave-active
    transition all 0.5s linear
  &.fade-enter, &.fade-leave-to
    opacity 0
    background rgba(7, 17, 27, 0)

@import "../../common/stylus/mixin.styl";

.header
  width: 100%;
  height: 45px;
  font-size 16px
  background-color: #fff;
  color #000
  padding: 0 0.1rem;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items center
  box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.10);
  opacity: 1;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 200;
  .title
    width 60%
    text-align center
    color: #000
    no-wrap()
  .slot
    min-width 20px
    min-height 20px